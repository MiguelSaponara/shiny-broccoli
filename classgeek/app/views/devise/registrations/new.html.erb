<div class="field d-flex flex-column align-items-center ">
<h2>Sign up</h2>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field d-flex flex-column align-items-center py-3">
      
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"email"%>
  </div>

  <div class="field d-flex flex-column align-items-center py-3">
    <%= f.label :name, "Name", class:"" %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder:"name"%>
  </div>

  <div class="field d-flex flex-column align-items-center py-3">
    <%= f.label :username, "UserName" %>
    <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder:"username"%>
  </div>



  <div class="field d-flex flex-column align-items-center py-3">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", placeholder:"password" %>
  </div>

  <div class="field d-flex flex-column align-items-center py-3">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, placeholder:"password_confirmation", autocomplete: "new-password" %>
  </div>

  <div class="actions d-flex flex-column align-items-center py-3">
    <%= f.submit "Sign up", class:"btn btn-primary" %>
  </div>
<% end %>
<div class="field d-flex flex-column align-items-center">
<%= render "devise/shared/links" %>
</div>
