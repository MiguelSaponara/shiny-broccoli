<p id="notice"><%= notice %></p>

<h1>Turmas</h1>

<table class= "table-bordered">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Inicio</th>
      <th>Fim</th>
      <th>Horas</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @turmas.each do |turma| %>
      <tr>
        <td class="px-1"><%= turma.nome %></td>
        <td class="px-1"><%= turma.inicio %></td>
        <td class="px-1"><%= turma.fim %></td>
        <td class="px-1"><%= turma.horas %></td>
        <td class="px-1"><%= link_to 'Show', turma, class: "btn btn-light" %></td>
        <td class="px-1"><%= link_to 'Edit', edit_turma_path(turma), class: "btn btn-light" %></td>
        <td class="px-1"><%= link_to 'Destroy', turma, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-light"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="d-grid gap-2 col-6 mx-auto">
  <%= link_to 'New Turma', new_turma_path, class:"btn btn-primary" %>
</div>


